<%= rails_env %>:
  host: "<%= database_host %>"
  adapter: "<%= database_adapter %>"
  encoding: "<%= database_encoding %>"
  database: "<%= database_name %>"
  pool: "<%= database_pool %>"
  username: "<%= database_user %>"
  password: "<%= database_password %>"
  <% if defined?(database_port) && !database_port.blank? %>
  port: <%= database_port %>
  <% end %>
  <% if defined?(database_host_mirror) && !database_host_mirror.blank? && database_adapter == "sqlserver" %>
  mirror:
    host: "<%= database_host_mirror %>"
  <% end %>
