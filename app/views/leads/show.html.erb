<% if @lead.present? %> 
    <h3>
      <%= @lead.business_type %> <br>
    </h3>
    <%= I18n.t'lead-show.location' %>    :<%= @lead.location %>       <br>
    <%= I18n.t'lead-show.zip' %>         :<%= @lead.zip %>            <br>
    <%= I18n.t'lead-show.time' %>        : <%= @lead.time %>          <br>
    <%= I18n.t'lead-show.description' %> : <%= @lead.description %>   <br>
    <%= I18n.t'lead-show.name' %>        : <%= @lead.name %>          <br>
    <% if user_signed_in? %> 
      <% if @lead.reverse_orders.where(selector_id: current_user.id).present? %>
        <% if @lead.reverse_orders.where(selector_id: current_user.id).first.paid == true %>
          <button> 
            <%= link_to "#{I18n.t'links-show.address-book'}", orders_path %>
          </button>
        <% else %>
            <%= render 'shared/payment_confirmation_link' %>
        <% end %>
      <% else %>
        <%= form_for(current_user.orders.build(selected_id: @lead.id)) do |o| %>
          <%= o.hidden_field :selected_id %>       
          <%= o.submit "#{I18n.t'links-show.buy'}" %>
        <% end %>
      <% end %> 
    <% else%>
      <button><%= link_to "#{I18n.t'links-show.buy'}", user_registration_path %></button>      
    <% end %>
<% else %>
  This lead isn't available.
<% end %>


