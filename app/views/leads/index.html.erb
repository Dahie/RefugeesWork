<html>
<head>
  <title></title>
</head>
<body>
<% if @leads.present? %>
  <% @leads.each do |lead| %>
    <% if user_signed_in? %> 
      <% if lead.reverse_orders.where(selector_id: current_user.id).present? %>
        <% if lead.reverse_orders.where(selector_id: current_user.id).first.paid == true %>
        <% else %> 
          <h3>
            <%= link_to "#{lead.business_type}", lead_path(lead) %> 
          </h3>
          <%= I18n.t'lead.location' %>    :<%= lead.location %>       <br>
          <%= I18n.t'lead.zip' %>         :<%= lead.zip %>            <br>
          <%= I18n.t'lead.time' %>        : <%= lead.time %>          <br>
          <%= I18n.t'lead.description' %> : <%= lead.description %>   <br>
          <%= I18n.t'lead.name' %>        : <%= lead.name %>          <br>
          <button>
            <%= link_to "#{I18n.t'link.address-book'}", orders_path %>              
          </button>
        <% end %>
      <% else %>
        <h3>
          <%= link_to "#{lead.business_type}", lead_path(lead) %> 
        </h3>
          <%= I18n.t'lead.location' %>    :<%= lead.location %>       <br>
          <%= I18n.t'lead.zip' %>         :<%= lead.zip %>            <br>
          <%= I18n.t'lead.time' %>        : <%= lead.time %>          <br>
          <%= I18n.t'lead.description' %> : <%= lead.description %>   <br>
          <%= I18n.t'lead.name' %>        : <%= lead.name %>          <br>
      <% end %> 
    <% else%>
      <h3>
        <%= link_to "#{lead.business_type}", lead_path(lead) %> 
      </h3>
        <%= I18n.t'lead.location' %>    :<%= lead.location %>       <br>
        <%= I18n.t'lead.zip' %>         :<%= lead.zip %>            <br>
        <%= I18n.t'lead.time' %>        : <%= lead.time %>          <br>
        <%= I18n.t'lead.description' %> : <%= lead.description %>   <br>
        <%= I18n.t'lead.name' %>        : <%= lead.name %>          <br>
    <% end %>
  <% end %>
<% else %>
  <%= I18n.t'notification.no-leads-available' %>
<% end %>
</body>
</html>


