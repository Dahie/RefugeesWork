<html>
<head>
  <title></title>
</head>
<body>
  <% @leads.each do |lead| %>
    <h3>Business Type: <%= lead.business_type %></h3>
    Location: <%= lead.location %> <br>
    ZIP: <%= lead.zip %> <br>
    Time: <%= lead.time %> <br>
    Description: <%= lead.description %><br>
    <% if user_signed_in? %>  
      <%= form_for(current_user.orders.build(selected_id: lead.id)) do |o| %>
        <%= o.hidden_field :selected_id %>       
        <%= o.submit "Make mine" %>
      <% end %>
    <% else %>
      <button><%= link_to "Make mine", new_user_registration_path %></button>      
    <% end %>
<% end %>
</body>
</html>


