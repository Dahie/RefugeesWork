<% if @order.present? %>
  <h3>
    <%= @lead.business_type %> <br>
  </h3>
  <%= I18n.t'ordersshow-lead.location' %>       :<%= @lead.location %>       <br>
  <%= I18n.t'ordersshow-lead.zip' %>            :<%= @lead.zip %>            <br>
  <%= I18n.t'ordersshow-lead.time' %>           : <%= @lead.time %>          <br>
  <%= I18n.t'ordersshow-lead.description' %>    : <%= @lead.description %>   <br>
  <%= I18n.t'ordersshow-lead.name' %>           : <%= @lead.name %>          <br>
    <% if user_signed_in? %> 
      <% if @lead.reverse_orders.where(selector_id: current_user.id).present? %>
        <% if @lead.reverse_orders.where(selector_id: current_user.id).first.paid == true %>
          ::::::::::::::::::::::::                                           <br>
          <strong> 
          <%= I18n.t'ordersshow-lead.phone' %>  :<%= @lead.phone %>          <br>
          <%= I18n.t'ordersshow-lead.email' %>  :<%= @lead.email %>          <br>
          </strong>                                                          <br>
          ::::::::::::::::::::::::                                           <br>
          <%= I18n.t'ordersshow-lead.notes' %>                               <br>
          <%= form_for (@order) do |l| %>
            <%= text_area(:order, :notes, :size => 20, :value => "#{@order.notes}") %>
          <%= l.submit "#{I18n.t'ordersshow-links.notes-save'}" %>
        <% end %>
          <button><%= link_to "#{I18n.t'ordersshow-links.address-book'}", orders_path %></button>
        <% else %>
           <p><%= I18n.t'ordersshow-lead.price' %> </p>
          <%= render 'leads/payment_buttons' %>
        <% end %>
      <% else %>
        <%= form_for(current_user.orders.build(selected_id: @lead.id)) do |o| %>
          <%= o.hidden_field :selected_id %>       
          <%= o.submit "#{I18n.t'ordersshow-links.buy'}" %>
        <% end %>
      <% end %> 
    <% else%>
      <button><%= link_to "#{I18n.t'ordersshow-links.buy'}", user_registration_path %></button>      
    <% end %>
<% else %>
  <%= I18n.t'ordersshow-notification.lead-not-available' %> 
<% end %>


