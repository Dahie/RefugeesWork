<% if @order.present? %>
  <h3>Business Type: <%= @lead.business_type %></h3>
  Location: <%= @lead.location %> <br>
  ZIP: <%= @lead.zip %> <br>
  Time: <%= @lead.time %> <br>
  Description: <%= @lead.description %><br>
    <% if user_signed_in? %> 
      <% if @lead.reverse_orders.where(selector_id: current_user.id).present? %>
        <% if @lead.reverse_orders.where(selector_id: current_user.id).first.paid == true %>
         ::::::::::::::::::::::::    <br>
          Name: <%= @lead.name %>    <br>
          Phone: <%= @lead.phone %>  <br>
          E-mail: <%= @lead.email %> <br>
          Notes:                     <br>
          <%= form_for (@order) do |l| %>
            <%= text_area(:order, :notes, :size => 20, :value => "#{@order.notes}") %>
            <%= l.submit "Save" %>
          <% end %>
          <button>Find me in <%= link_to "My customers", orders_path %></button>
        <% else %>
          <%= render 'leads/payment_buttons' %>
        <% end %>
      <% else %>
        <%= form_for(current_user.orders.build(selected_id: @lead.id)) do |o| %>
          <%= o.hidden_field :selected_id %>       
          <%= o.submit "Buy" %>
        <% end %>
      <% end %> 
    <% else%>
      <button><%= link_to "Buy", user_registration_path %></button>      
    <% end %>
<% else %>
  This lead isn't available.
<% end %>


