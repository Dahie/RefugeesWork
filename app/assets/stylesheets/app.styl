@import 'jeet/index'

.columns  
  width: 90%;
  max-width: 1100px;
  min-width: 800px;
  margin: 50px auto;
  -webkit-column-count: 4;
  -webkit-column-gap: 10px;
  -webkit-column-fill: auto;
  -moz-column-count: 4;
  -moz-column-gap: 10px;
  -moz-column-fill: auto;
  column-count: 4;
  column-gap: 15px;
  column-fill: auto;


.lead_box
  // column(1/5, uncycle: 4)
  // width 20%
  // display inline-block
  vertical-align bottom
  -webkit-column-break-inside: avoid;
  -moz-column-break-inside: avoid;
  column-break-inside: avoid;
  background-color white
  background-clip padding-box
  border-radius 4px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.05)
  padding 7px  
  background-color #f7f7f7
  background -webkit-linear-gradient(#fff, #f0f0f0)
  background linear-gradient(#fff, #f0f0f0)
  border 1px solid #ccc
  margin-bottom 7px

    

.lead_body
  margin-bottom 10px
  margin-top 7px
  font-size 11px
  padding 10px


.lead_title
  padding 10px
  font-weight bold
  font-size 11px
  padding-bottom 7px
  border-bottom 1px solid #e7e7e7
  margin-bottom 7px
  margin-top 0px
  &:hover
    background-color #e9eaed
    padding-bottom 7px
    -webkit-font-smoothing: antialiased
    border-bottom 1px solid #e7e7e7
    margin-bottom 7px
    margin-top 0px


.button

  background-clip padding-box
  border-radius 4px
  border 1px solid rgba(0, 0, 0, 0.3)
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.05)
  background-color #f7f7f7
  background -webkit-linear-gradient(#fff, #f0f0f0)
  background linear-gradient(#fff, #f0f0f0)
  border 1px solid #ccc
  color #5f5f5f
  cursor pointer
  text-shadow 0 1px #fff
  white-space nowrap
  font-size 11px
  position relative
  padding 4px
  margin-top 14px
  margin-bottom 10px



  

  






