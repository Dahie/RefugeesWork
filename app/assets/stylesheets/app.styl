  margin-left 96px
  padding 50px
  width 69%
  max-width 1100px
  min-width 800px
  margin-top 40px
  background-color white
  font-size 12px
  color Offer-Font-Color
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  line-height 150% 
  .info_thanks
    text-align center
    color Offer-Font-Color
    font-weight bold
    font-size 28px
    margin-bottom 30px  
  .info_table
    center(420px)
    margin-top 20px
    color #606060
    text-align left
    padding 10px
    border 4px solid #e7e7e7
    box-shadow inset 0 0 0 0 #CCC
    border-radius 4px
    .info_table_item
      font-weight bold
      padding 4px
      font-size 12px
      background-color Lead-Subtitle 
      td
        font-weight bold
        padding 4px
        font-size 12px 
  .info_faq_title
    text-align left
    color Offer-Font-Color
    font-weight bold
    font-size 28px
    margin-top 50px 
    margin-bottom 30px  
  .info_faq_question
    font-weight bold
    font-size 14px
    margin-bottom 4px
  .info_faq_answer
    margin-bottom 30px
    font-size 14px

// :::::::::::: DEVISE/LOGIN (sessions/new) :::::::::::: //

.login
  margin-top 60px
  margin-left 100px  
  .login_title
    font-size 28px
    font-weight bold
    margin-bottom 20px
  .login_form_email,
  .login_form_password
    font-size 12px
    margin-bottom 14px
    #user_email,
    #user_password
      border-radius 4px
      margin-top 4px
      height 26px
      width 200px
      border 1px solid #E8E8E8  
  .login_form_remember_me
    font-size 10px  
  .login_form_submit input
  .login_form_submit a 
    color #606060
    border 1px solid #E8E8E8  
    cursor pointer
    width 57px
    line-height 16px
    font-size 10px
    font-weight bold
    position relative
    border-radius 4px
    padding 4px
    margin-top 10px
    margin-bottom 10px  
    text-align center
    background-color Buy-Button-Color
    -webkit-font-smoothing: antialiased
    &:hover
      background-color #B8B8B8
  .login_shared_links
    font-size 10px
    &:hover
      text-decoration underline

