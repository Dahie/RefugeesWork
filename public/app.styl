// :::::::::::: MIXINS :::::::::::::: //

body-mixin(backgroundImage = url(/images/cream_pixels.png)) 
  top_menu_bar()
  background-image  backgroundImage  
  background-repeat: no-repeat;
  background-position: center top;
  background-size: cover;
  -webkit-background-size: cover;
  background-attachment: fixed
  margin 0px
  font-size 12px
  color Offer-Font-Color
  font-family App-Font-Family
  a  
    text-decoration none
    color Offer-Font-Color
    font-family App-Font-Family

blur-mixin(intensity = 1.6px)
  -webkit-filter blur(intensity) 
  -moz-filter blur(intensity) 
  -o-filter blur(intensity) 
  // -ms-filter blur(intensity) 
  filter blur(intensity)
  
